BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        TextInput:
            id: input_miles
            text: '1'
            font_size: 48
            size_hint_x: 0.8
            multiline: False
            on_text: app.handle_convert()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                id: up_button
                text: 'Up'
                font_size: 36
                on_press: app.handle_increment(1)
            Button:
                id: down_button
                text: 'Down'
                font_size: 36
                on_press: app.handle_increment(-1)
#    Button:
#        text: 'Convert m to km'
#        font_size: 36
#        on_press: app.handle_convert()
    Label:
        text: app.number_of_kilometers
        font_size: 48